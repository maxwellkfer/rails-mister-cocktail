<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
 <ul>
   <li><%= dose.ingredient.name %></li>
   <li><%= dose.description %></li>
   <li><%= link_to 'delete dose', dose_path(dose), method: 'delete' %></li>
 </ul>
<% end %>

<p><%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail) %></p>

