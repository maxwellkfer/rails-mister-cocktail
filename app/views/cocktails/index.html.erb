

<div class="container">
  <h1 class="text-center" id="trip">My Cocktails :</h1>
  <div class="cards">

    <div class="row">
      <% @cocktail.each do |cocktail| %>

              <!-- Code your cards  here -->
          <div class="col-xs-12 col-sm-4">
            <div class="card">
              <div class="card-body" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
                <div class="card-description">
                  <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
                </div>
              </div>
            </div>

          </div>
      <% end %>
    </div>
  </div>
</div>


