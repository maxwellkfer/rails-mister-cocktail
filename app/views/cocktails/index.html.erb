

<div class="container">
      <h1 class="text-center" id="trip">My Cocktails :</h1>
      <div class="cards">

<% @cocktail.each do |cocktail| %>

        <!-- Code your cards  here -->
        <div class="card">
          <div class="card-body" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
            <div class="card-category">
             <p>Cocktail</p>
            </div>
            <div class="card-desc">
  <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>

            </div>
            <a href="#" class="card-links"></a>
          </div>
          <div class="card-footer">
            <div class="card-date">
              <p>Posted on 07/08/1986</p>
            </div>
            <div class="controls">
              <a href="#"><i class="fas fa-star"></i></a>
              <a href="#"><i class="fas fa-heart"></i></a>
              <a href="#"><i class="fas fa-share"></i></a>
            </div>

          </div>
        </div>

<% end %>
      </div>
    </div>
