<div class="container">
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, "Create a cocktail", class: "btn btn-success"%>
  <% end %>


  <p><%= link_to "Mes Cocktails", root_path %></p>

</div>
